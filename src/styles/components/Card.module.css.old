.card {
  align-items: center;
  border-radius: 4px;
  box-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  display: inline-flex;
  flex-direction: column;
  min-width: 100px;
  padding: 20px;
}

.header {
  align-items: center;
  display: flex;
  font-size: 1rem;
  height: 50px;
  margin-bottom: 20px;
  text-align: center;
}

.card img {
  border-radius: 50%;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
  min-width: 80px;
  transition: transform 0.2s;
  width: 100%;
}
